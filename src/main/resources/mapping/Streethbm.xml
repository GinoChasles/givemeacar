<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="fr.givemeacar.app.model.Street" table="street" schema="givemeacar">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="streetTypeId">
            <column name="street_type_id" sql-type="int"/>
        </property>
        <many-to-one name="streetTypeByStreetTypeId" class="fr.givemeacar.app.model.StreetType">
            <column name="street_type_id"/>
        </many-to-one>
        <set name="addressesById" inverse="true">
            <key>
                <column name="street_id"/>
            </key>
            <one-to-many not-found="ignore" class="fr.givemeacar.app.model.Address"/>
        </set>
        <set name="streetHasCitiesById" inverse="true">
            <key>
                <column name="street_id"/>
            </key>
            <one-to-many not-found="ignore" class="fr.givemeacar.app.model.StreetHasCity"/>
        </set>
    </class>
</hibernate-mapping>