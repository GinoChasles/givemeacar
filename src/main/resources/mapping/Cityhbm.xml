<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="fr.givemeacar.app.model.City" table="city" schema="givemeacar">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(68)" length="68"/>
        </property>
        <property name="zipcode">
            <column name="zipcode" sql-type="varchar(5)" length="5"/>
        </property>
        <property name="countryId">
            <column name="country_id" sql-type="int"/>
        </property>
        <many-to-one name="countryByCountryId" class="fr.givemeacar.app.model.Country">
            <column name="country_id"/>
        </many-to-one>
        <set name="addressesById" inverse="true">
            <key>
                <column name="city_id"/>
            </key>
            <one-to-many not-found="ignore" class="fr.givemeacar.app.model.Address"/>
        </set>
        <set name="streetHasCitiesById" inverse="true">
            <key>
                <column name="city_id"/>
            </key>
            <one-to-many not-found="ignore" class="fr.givemeacar.app.model.StreetHasCity"/>
        </set>
    </class>
</hibernate-mapping>